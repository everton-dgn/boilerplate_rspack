{
  "name": "boilerplate-rspack",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "Project frontend with rspack",
  "repository": "https://github.com/everton-dgn/boilerplate_rspack",
  "main": "./src/index.js",
  "scripts": {
    "dev": "NODE_ENV=development rspack serve --dotenv .env.local",
    "clean": "rm -rf dist/*",
    "prebuild:local": "npm run clean",
    "build:local": "NODE_ENV=development rspack build --dotenv .env.local",
    "build:dev": "NODE_ENV=production rspack build --dotenv .env.dev",
    "build:prod": "NODE_ENV=production rspack build --dotenv .env.prod",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src --ext ts,tsx,json --max-warnings=0",
    "lint:fix": "eslint --fix src --ext ts,tsx,json",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:w": "vitest",
    "test:ci": "vitest run",
    "generate": "yarn plop --plopfile componentGenerator/plopfile.js",
    "analyze": "NODE_ENV=production rspack build --analyze --dotenv .env.prod",
    "check:update": "yarn upgrade-interactive --latest",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.10.0",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@rspack/cli": "^0.1.6",
    "@storybook/addon-a11y": "^7.0.2",
    "@storybook/addon-essentials": "^7.0.2",
    "@storybook/addon-interactions": "^7.0.2",
    "@storybook/addon-links": "^7.0.2",
    "@storybook/react": "^7.0.2",
    "@storybook/react-vite": "^7.0.2",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@testing-library/dom": "8.20.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.15.11",
    "@types/react": "18.0.31",
    "@types/react-dom": "18.0.11",
    "@types/react-test-renderer": "18.0.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "@vitejs/plugin-react-swc": "^3.3.0",
    "@vitest/coverage-c8": "^0.30.0",
    "@vitest/ui": "^0.30.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.0.3",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "17.0.0",
    "eslint-import-resolver-typescript": "3.5.4",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-testing-library": "5.10.2",
    "happy-dom": "^9.1.9",
    "husky": "8.0.3",
    "jest-styled-components": "^7.1.1",
    "jsdom": "^21.1.1",
    "jsdom-global": "^3.0.2",
    "lint-staged": "13.2.0",
    "plop": "^3.1.2",
    "prettier": "2.8.7",
    "storybook": "^7.0.2",
    "storybook-dark-mode": "^3.0.0",
    "storybook-mobile": "^1.0.1",
    "typescript": "4.7.4",
    "vite": "^4.2.1",
    "vite-tsconfig-paths": "^4.0.8",
    "vitest": "^0.30.0"
  }
}
