{
  "name": "boilerplate-rspack",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "Project frontend with rspack",
  "repository": "https://github.com/everton-dgn/boilerplate_rspack",
  "main": "./src/index.js",
  "scripts": {
    "dev": "NODE_ENV=development ENV_FILE=.env.local rspack serve",
    "build:local": "NODE_ENV=development ENV_FILE=.env.local rspack build",
    "build:dev": "NODE_ENV=production ENV_FILE=.env.dev rspack build",
    "build:prod": "NODE_ENV=production ENV_FILE=.env.prod rspack build",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "lint": "eslint --cache src --ext ts,tsx,json --max-warnings=0",
    "lint:fix": "eslint --cache --fix src --ext ts,tsx,json",
    "format": "prettier --cache --write .",
    "check:format": "prettier --cache --check .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "vitest run",
    "test:c": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:w": "vitest",
    "test:ci": "vitest run",
    "generate": "yarn plop --plopfile componentGenerator/plopfile.js",
    "analyze": "NODE_ENV=production ENV_FILE=.env.prod rspack build --analyze",
    "check:update": "yarn upgrade-interactive --latest",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.16.0",
    "styled-components": "^6.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.2",
    "@commitlint/config-conventional": "17.7.0",
    "@rspack/cli": "^0.3.6",
    "@storybook/addon-a11y": "^7.4.5",
    "@storybook/addon-essentials": "^7.4.5",
    "@storybook/addon-links": "^7.4.5",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^7.4.5",
    "@storybook/react": "^7.4.5",
    "@storybook/react-vite": "^7.4.5",
    "@storybook/testing-library": "^0.2.1",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "9.3.3",
    "@testing-library/jest-dom": "6.1.3",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.5.1",
    "@types/jsdom-global": "^3.0.5",
    "@types/node": "20.8.2",
    "@types/react": "18.2.24",
    "@types/react-dom": "18.2.8",
    "@types/styled-components": "^5.1.28",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "@vitejs/plugin-react-swc": "^3.4.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.3.1",
    "eslint": "8.50.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-n": "16.1.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-storybook": "^0.6.14",
    "eslint-plugin-testing-library": "6.0.2",
    "eslint-plugin-typescript-sort-keys": "^3.0.0",
    "happy-dom": "^12.8.0",
    "husky": "8.0.3",
    "jest-styled-components": "^7.1.1",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "14.0.1",
    "plop": "^4.0.0",
    "prettier": "3.0.3",
    "storybook": "^7.4.5",
    "typescript": "5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-svgr": "^4.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6"
  }
}
